{
  "name": "node-onlearn",
  "author": "Malcolm R. Kente (reMRKable Dev)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "DEBUG=node-onlearn:* nodemon ./bin/www",
    "test": "jest --watchAll=true --runInBand --detectOpenHandles",
    "coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "*.js",
      "configs/**/*.js",
      "api/**/*.js",
      "database/**/*.js",
      "utils/global-utils/**/*.js",
      "loaders/*",
      "!prettier.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 86,
        "functions": 87,
        "lines": 95,
        "statements": 94
      }
    }
  },
  "dependencies": {
    "bcrypt": "5.0.1",
    "cloudinary": "1.25.1",
    "connect-flash": "0.1.1",
    "connect-mongo": "4.4.1",
    "cookie-parser": "1.4.5",
    "debug": "4.3.1",
    "dotenv": "9.0.2",
    "express": "4.17.1",
    "express-session": "1.17.2",
    "express-validator": "6.11.1",
    "hbs": "4.1.2",
    "http-errors": "1.8.0",
    "mongodb-memory-server": "6.9.6",
    "mongoose": "5.12.10",
    "morgan": "1.10.0",
    "multer": "1.4.2",
    "multer-storage-cloudinary": "4.0.0",
    "passport": "0.4.1",
    "passport-google-oauth": "2.0.0",
    "passport-local": "1.0.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "1.2.4",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.3",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "26.6.3",
    "mongodb": "3.6.7",
    "prettier": "2.3.0",
    "supertest": "6.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reMRKableDev/OnLearn.git"
  },
  "bugs": {
    "url": "https://github.com/reMRKableDev/OnLearn/issues"
  },
  "homepage": "https://github.com/reMRKableDev/OnLearn#readme"
}
