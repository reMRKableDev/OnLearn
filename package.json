{
  "name": "node-onlearn",
  "author": "Malcolm R. Kente (reMRKable Dev)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "DEBUG=node-onlearn:* nodemon ./bin/www",
    "test": "jest --watchAll=true --runInBand --detectOpenHandles",
    "coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "*.js",
      "configs/**/*.js",
      "api/**/*.js",
      "database/**/*.js",
      "utils/global-utils/**/*.js",
      "loaders/*",
      "!prettier.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 86,
        "functions": 87,
        "lines": 95,
        "statements": 94
      }
    }
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "cloudinary": "2.5.1",
    "connect-flash": "0.1.1",
    "connect-mongo": "5.1.0",
    "cookie-parser": "1.4.7",
    "debug": "4.4.0",
    "dotenv": "16.6.1",
    "express": "4.21.2",
    "express-session": "1.18.1",
    "express-validator": "7.2.1",
    "hbs": "4.2.0",
    "http-errors": "2.0.0",
    "mongodb-memory-server": "10.1.4",
    "mongoose": "8.14.0",
    "morgan": "1.10.0",
    "multer": "1.4.4",
    "multer-storage-cloudinary": "4.0.0",
    "passport": "0.7.0",
    "passport-google-oauth": "2.0.0",
    "passport-local": "1.0.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "5.0.0",
    "eslint": "9.25.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "29.7.0",
    "mongodb": "6.16.0",
    "prettier": "3.5.3",
    "supertest": "7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reMRKableDev/OnLearn.git"
  },
  "bugs": {
    "url": "https://github.com/reMRKableDev/OnLearn/issues"
  },
  "homepage": "https://github.com/reMRKableDev/OnLearn#readme"
}
