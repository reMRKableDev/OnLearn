{
  "name": "node-onlearn",
  "author": "Malcolm R. Kente (reMRKable Dev)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "DEBUG=node-onlearn:* nodemon ./bin/www",
    "test": "jest --watchAll=true --runInBand --detectOpenHandles",
    "coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "*.js",
      "configs/**/*.js",
      "api/**/*.js",
      "database/**/*.js",
      "utils/global-utils/**/*.js",
      "loaders/*",
      "!prettier.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 86,
        "functions": 87,
        "lines": 95,
        "statements": 94
      }
    }
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "cloudinary": "1.35.0",
    "connect-flash": "0.1.1",
    "connect-mongo": "5.1.0",
    "cookie-parser": "1.4.6",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "express-validator": "7.0.1",
    "hbs": "4.2.0",
    "http-errors": "2.0.0",
    "mongodb-memory-server": "8.13.0",
    "mongoose": "7.3.3",
    "morgan": "1.10.0",
    "multer": "1.4.4",
    "multer-storage-cloudinary": "4.0.0",
    "passport": "0.6.0",
    "passport-google-oauth": "2.0.0",
    "passport-local": "1.0.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "4.1.7",
    "eslint": "8.42.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "mongodb": "5.8.0",
    "prettier": "3.1.1",
    "supertest": "6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reMRKableDev/OnLearn.git"
  },
  "bugs": {
    "url": "https://github.com/reMRKableDev/OnLearn/issues"
  },
  "homepage": "https://github.com/reMRKableDev/OnLearn#readme"
}
